<RDF
  xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
  xmlns:em="http://www.mozilla.org/2004/em-rdf#"
>
  <Description about="urn:mozilla:install-manifest">
    <em:type>2</em:type><!-- Extension -->
    <em:id>facebook@disconnect.me</em:id>
    <em:name>Facebook Disconnect</em:name>
    <em:version>1.0.0</em:version>
    <em:creator>Disconnect</em:creator>
    <em:developer>Brian Kennish</em:developer>
    <em:description>
      Stop Facebook from tracking the webpages you go to.
    </em:description>
    <em:iconURL>chrome://fbdc/skin/icon.png</em:iconURL>
    <em:icon64URL>chrome://fbdc/skin/icon64.png</em:icon64URL>
    <em:homepageURL>http://disconnect.me/facebook</em:homepageURL>
    <!-- Firefox -->
    <em:targetApplication>
      <Description>
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
        <em:minVersion>1.5</em:minVersion>
        <em:maxVersion>10.0.*</em:maxVersion>
      </Description>
    </em:targetApplication>
    <!-- Flock -->
    <em:targetApplication>
      <Description>
        <em:id>{a463f10c-3994-11da-9945-000d60ca027b}</em:id>
        <em:minVersion>0.7</em:minVersion>
        <em:maxVersion>2.6.*</em:maxVersion>
      </Description>
    </em:targetApplication>
  </Description>
</RDF>
